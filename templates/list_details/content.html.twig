<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">
            <!-- ***** Most Popular Start ***** -->
          <div class="most-popular">
            <div class="row">
              <div class="col-lg-12">
                <div class="heading-section">
                  <h4><em>{{ liste.nom }}</em></h4>
                </div>
                <div class="row">
                  {% for anime in animeInList %}
                  <div class="col-lg-3 col-sm-6">
                    <div class="item">
                      <img src="{{ asset('build/assets/images/popular-01.jpg') }}" alt="">
                      <h4><a href="{{ path('app_anime_details', {'id': anime.id }) }}">{{ anime.nom }}</a><br><span>Sandbox</span></h4>
                      <ul>
                        <li><i class="fa fa-star"></i> 4.8</li>
                        <li><i class="fa fa-download"></i> 2.3M</li>
                      </ul>
                       <form action="{{ path('app_remove_anime_in_list', {'liste': liste.id, 'anime': anime.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Delete</button>
                      </form>
                    </div>
                  </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
          <!-- ***** Most Popular End ***** -->
        </div>
      </div>
    </div>
  </div>