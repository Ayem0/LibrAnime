<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-content">
            <!-- ***** Most Popular Start ***** -->
                <div class="most-popular">
                  
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="heading-section">
                                <h4><em>My Lists</em><div class="float-end">
                                  <button id="create-list-button" class="btn btn-primary"><i class="fa fa-plus"></i> Create list</button>
                                </div>
                              </h4>
                                
                              </div>
                                <div id="create-list-form" class="list-options" style="display: none;">
                                  <div class="dialog-container">
                                    <button class="closeButton add-to-list" id="close-list-button"><img src="{{ asset('/images/cross.png') }}" alt=""></button>
                                    <div class="heading-section">
                                      <h4>Create List</h4>
                                    </div>
                                    {{ form_start(form, {'attr': {'class': 'center', 'autocomplete': 'off'}}) }}
                                      {{ form_widget(form.nom) }}
                                      {{ form_widget(form.create) }}
                                    {{ form_end(form) }}
                                  </div>
                                </div>
                                
                            </div>
                            <div class="row">
                              <div class="col">
                                  {{ form_start(filterForm, {'attr': {'class': 'row g-3'}}) }}
                                      <div class="col-md-4">
                                          {{ form_row(filterForm.q, {'attr': {'class': 'form-control', 'placeholder': 'Search a list...'}}) }}
                                      </div>
                                      <div class="col d-flex justify-content-end">
                                          <button type="submit" class="btn btn-primary">Filter</button>
                                      </div>
                                  {{ form_end(filterForm) }}
                              </div>
                          </div>
                        <div class="row">
                          <div class="row mt-3 mb-3">
                                
                            <div class="col-md-2" style="color: white;">{% if lists.getTotalItemCount %}{{ lists.getTotalItemCount }} Lists{% else %}No Lists{% endif %}</div>
                            <div class="col-md-10 text-end">
                                <button class="btn btn-secondary mb-3" >
                                    {{ knp_pagination_sortable(lists, 'Name', 'l.nom') }}
                                </button>
                                
                               
                            </div>
                        </div>
                        {% for list in lists %}
                        <div class="col-lg-3 col-sm-6">
                          
                            <div class="item">
                                <h4><a href="{{ path('app_list', {'id': list.id}) }}">{{ list.nom }}</a></h4>
                                <ul>
                                    <li><i class="fa fa-star"></i> {{ listsCount[list.id] }}</li>
                                </ul>
                                <form action="{{ path('app_remove_list', {'id': list.id}) }}" method="post">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <div class="d-flex justify-content-end pt-3">
                                
                                  <button class="btn btn-secondary " type="submit"><i class="fa fa-remove"></i></button>
                                
                              </div>   
                                </form>
                            </div>
                        
                        
                        </div>
                  {% endfor %}
                </div>
              </div>
            </div>
          </div>
          <!-- ***** Most Popular End ***** -->
        </div>
      </div>
    </div>
  </div>