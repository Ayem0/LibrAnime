{% extends 'loginAndRegisterBase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {# Créez votre propre balise form avec la classe et le style souhaités #}
<div class="limiter">
    <div class="container-login100" style="background-color: #1f2122;">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            {# Commencez le formulaire Symfony #}
            {{ form_start(registrationForm, {'attr': {'class': 'login100-form validate-form flex-sb flex-w'}}) }}

            <span class="login100-form-title p-b-53">
                Register
            </span>
            {{ form_errors(registrationForm) }}
            <div class="p-t-31 p-b-9">
                <span class="txt1">
                    Email
                </span>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Email is required">
                {{ form_widget(registrationForm.email, {'attr': {'class': 'input100', 'type': 'text'}}) }}
                <span class="focus-input100"></span>
            </div>

            <div class="p-t-13 p-b-9">
                <span class="txt1">
                    Password
                </span>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Password is required">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input100', 'type': 'password'}}) }}
                <span class="focus-input100"></span>
            </div>
			{{ form_row(registrationForm.agreeTerms) }}
            <div class="container-login100-form-btn m-t-17">
                {# Utilisez votre propre bouton submit personnalisé #}
                <button type="submit" class="btn login100-form-btn">Register</button>
            </div>
			{{ form_end(registrationForm) }}

            <div class="w-full text-center p-t-55">
                <span class="txt2">
                    Already have an account?
                </span>

                <a href="{{ path('app_login') }}" class="txt2 bo1">
                    Log in now
                </a>
            </div>

            {# Terminez le formulaire Symfony #}

        </div>
    </div>
</div>


















